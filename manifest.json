{
    "manifest_version": 2,

    "name": "Accents",
    "author": "Eugene Li and Gaetan Almela",
    "description": "Emulates the new accent system from macOS.",
    "version": "2.0.0",
    "icons": {
        "16": "images/16.png" ,
        "48": "images/48.png",       
        "128": "images/128.png"
    },

    "background": {
        "scripts": [ "index.js" ],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Accents",
        "default_icon": "images/browserAction.png"
    },

    "permissions": [
        "activeTab",
        "tabs", 
        "clipboardRead", 
        "clipboardWrite"
    ]
}